/* pages/components/customButton/customButton.wxss */

.button{

  flex-direction: column;
  height:  120rpx;
  width: 200rpx;

  background:red;
  margin-top: 60rpx;
  display: flex;

  box-sizing: border-box;
  padding: 0 80rpx;
}

.image{

  width: 40px;
  height: 40px;
  margin-top: 5px;

  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #1AAD19;
  color: #FFFFFF;
  font-size: 36rpx;

  margin: 0 auto;
}

.text{

  font-size: 26rpx;
  margin-top: 5px;
  text-align: center;
  height: 20px;

  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #2782D7;
  color: #FFFFFF;

  margin: 0 auto;
}

.image:before{
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.text:before{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
